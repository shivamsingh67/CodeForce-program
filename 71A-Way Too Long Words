//By the question we have to print the string N number of times if it<10 then whole string will print if it>10 then
//1st-index & last inddex nuber remains same and the number of the digit within the 1st and last number will be printed 
//eg=    whhhhhhhhhhm-> will be w10m as output

#include <bits/stdc++.h> //or you can use #include<iostream>
using namespace std;
string a;
int n;
int main() {
    cin >> n;
    for (int i = 0; i < n; i++) {
        cin >> a;
        if (a.length() > 10) {
            cout << a[0] << a.length() - 2 << a[a.length() - 1] << endl;
        } else {
            cout << a << endl;
        }
    }
}

